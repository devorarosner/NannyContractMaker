<Window x:Class="PLWPF.NannyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="NannyWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Nanny"  Margin="10"  Click="Button_Click"/>
        <Button Content="Remove Nanny"  Margin="10"  Click="Button_Click_2" Grid.Row="1"/>
        <Button Content="Nanny Recommendations"  Margin="10"  Click="Button_Click_3" Grid.Row="2"/>
        <Button Content="Show Nanny"  Margin="10"  Click="Button_Click_1" Grid.Row="3"/>
        <Button Content="Show Nannys that Work by Minstry"   Margin="10" Grid.Row="4" Click="Button_Click_4"/>

    </Grid>
</Window>
